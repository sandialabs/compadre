<ParameterList name="Compadre">
  <ParameterList name="physics">
    <Parameter name="diffusion" type="double" value="0.0"/>
    <Parameter name="penalty" type="double" value="0e-4"/>
  </ParameterList>
  <ParameterList name="io">
    <Parameter name="input file prefix" type="string" value="../test_data/grids/"/>
    <Parameter name="input file" type="string" value="dg_0.nc"/>
    <Parameter name="output file prefix" type="string" value="../test_data/"/>
    <Parameter name="output file" type="string" value="dg_out.pvtp"/>
    <Parameter name="vtk produce mesh" type="bool" value="false"/>
  </ParameterList>
  <ParameterList name="solver">
    <Parameter name="type" type="string" value="direct"/>
    <Parameter name="file" type="string" value="../test_data/parameter_lists/advectiondiffusion/solver_amg.xml"/>
    <Parameter name="blocked" type="bool" value="true"/>
    <!--<Parameter name="save residual over solution" type="bool" value="true"/>-->
  </ParameterList>
  <ParameterList name="remap">
    <Parameter name="weighting power" type="int" value="3"/>
    <Parameter name="porder" type="int" value="1"/>
    <Parameter name="dense solver type" type="string" value="SVD"/>
  </ParameterList>
  <ParameterList name="neighborhood">
    <Parameter name="method" type="string" value="nanoflann"/>
    <Parameter name="dynamic radius" type="bool" value="true"/>
    <Parameter name="spatially varying radius" type="bool" value="false"/>
    <!-- spatially varying must be false to ensure symmetry in neighborhoods -->
    <Parameter name="multiplier" type="double" value="2.00"/>
    <Parameter name="size" type="double" value="0.5"/>
    <Parameter name="cutoff multiplier" type="double" value="1.2"/>
  </ParameterList>
  <ParameterList name="halo">
    <Parameter name="dynamic" type="bool" value="true"/>
    <Parameter name="multiplier" type="double" value="16.0"/>
  </ParameterList>
</ParameterList>
