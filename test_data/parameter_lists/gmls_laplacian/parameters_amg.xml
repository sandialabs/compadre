<ParameterList name="Compadre">
  <Parameter name="solution type" type="string" value="sine"/>
  <Parameter name="loop size" type="int" value="3"/>
  <ParameterList name="io">
    <Parameter name="input file prefix" type="string" value="../test_data/grids/output_"/>
    <Parameter name="input file" type="string" value=""/>
    <Parameter name="output file prefix" type="string" value="../test_data/amg_"/>
    <Parameter name="output file" type="string" value=".nc"/>
  </ParameterList>
  <ParameterList name="solver">
    <Parameter name="type" type="string" value="iterative"/>
    <Parameter name="file" type="string" value="../test_data/parameter_lists/gmls_laplacian/solver_amg.xml"/>
    <Parameter name="blocked" type="bool" value="false"/>
    <!--<Parameter name="save residual over solution" type="bool" value="true"/>-->
  </ParameterList>
  <ParameterList name="remap">
    <Parameter name="weighting power" type="int" value="5"/>
    <Parameter name="porder" type="int" value="2"/>
    <Parameter name="quadrature order" type="int" value="2"/>
    <Parameter name="quadrature dimension" type="int" value="1"/>
    <Parameter name="quadrature type" type="string" value="line"/>
  </ParameterList>
  <ParameterList name="neighborhood">
    <Parameter name="method" type="string" value="nanoflann"/>
    <Parameter name="cutoff multiplier" type="double" value="1.5"/>
    <Parameter name="size" type="double" value="25.5"/>
  </ParameterList>
  <ParameterList name="halo">
    <Parameter name="dynamic" type="bool" value="true"/>
    <Parameter name="multiplier" type="double" value="8.0"/>
  </ParameterList>
</ParameterList>
