<ParameterList name="Compadre">
  <Parameter name="loop size" type="int" value="3"/>
  <ParameterList name="io">
    <Parameter name="input file prefix" type="string" value="../test_data/grids/output_"/>
    <Parameter name="input file" type="string" value=""/>
    <Parameter name="output file prefix" type="string" value="../test_data/direct_"/>
    <Parameter name="output file" type="string" value=".pvtp"/>
    <Parameter name="vtk produce mesh" type="bool" value="false"/>
  </ParameterList>
  <ParameterList name="solver">
    <Parameter name="type" type="string" value="direct"/>
    <Parameter name="blocked" type="bool" value="false"/>
  </ParameterList>
  <ParameterList name="remap">
    <Parameter name="weighting power" type="int" value="5"/>
    <Parameter name="porder" type="int" value="2"/>
    <Parameter name="neighbors needed multiplier" type="double" value="1.0"/>
  </ParameterList>
  <ParameterList name="neighborhood">
    <Parameter name="method" type="string" value="nanoflann"/>
    <Parameter name="dynamic radius" type="bool" value="true"/>
    <Parameter name="spatially varying radius" type="bool" value="true"/>
    <Parameter name="cutoff multiplier" type="double" value="1.5"/>
    <Parameter name="multiplier" type="double" value="1.125"/>
  </ParameterList>
  <ParameterList name="halo">
    <Parameter name="dynamic" type="bool" value="true"/>
    <Parameter name="multiplier" type="double" value="4.0"/>
  </ParameterList>
</ParameterList>
